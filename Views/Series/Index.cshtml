@model IEnumerable<Filmera.Models.Serie>

@{
    ViewData["Title"] = "Series registradas";
    var msg = TempData["Mensaje"] as string;
}

<div class="container-fluid py-4">

    <!-- Header -->
    <div class="row mb-3 align-items-center">
        <div class="col-lg-9">
            <h1 class="mb-0">@ViewData["Title"]</h1>

            @if (!string.IsNullOrEmpty(msg))
            {
                <div class="alert alert-info mt-3" role="alert">
                    @msg
                </div>
            }
        </div>

        <div class="col-lg-3 mt-3 mt-lg-0">
            <form asp-action="BuscarSer" method="post" class="d-flex w-100">
                <input id="titulo"
                       name="titulo"
                       type="text"
                       class="form-control form-control-sm me-2"
                       placeholder="Nombre de la serie" />
                <button type="submit" class="btn btn-brand btn-sm">
                    <i class="bi bi-search me-1"></i>Buscar
                </button>
            </form>

        </div>
    </div>

    <div class="row gx-3 gy-4">

        <!-- TABLA -->
        <main class="col-lg-9 peliculas-main">
            <div class="card p-3">

                <div class="mb-3">
                    <a class="btn btn-primary btn-sm me-2"
                       asp-controller="Series"
                       asp-action="Create">
                        <i class="bi bi-plus-circle me-1"></i>Añadir serie
                    </a>

                    <a class="btn btn-outline-secondary btn-sm"
                       asp-controller="Series"
                       asp-action="Index">
                        <i class="bi bi-list-ul me-1"></i>Mostrar todas
                    </a>
                </div>

                @if (!Model.Any())
                {
                    <div class="p-4 text-muted-custom">
                        No hay series registradas aún
                    </div>
                }
                else
                {
                    <table class="table mb-0 peliculas-table">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Título</th>
                                    <th>Sinopsis</th>
                                    <th>Género</th>
                                    <th>Temporadas</th>
                                    <th>Episodios</th>
                                    <th>Calificación</th>
                                    <th>Lanzamiento</th>
                                    <th>Público</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model)
                                {
                                    <tr>
                                        <td>@p.IdSerie</td>
                                        <td class="fw-semibold">@p.Titulo</td>
                                    <td class="align-middle">
                                        <div class="truncate-ellipsis">@p.Sinopsis</div>
                                    </td>

                                        <td>@p.Genero</td>
                                        <td>@p.Temporadas</td>
                                        <td>@p.Episodios</td>
                                        <td>@p.Calificacion</td>
                                        <td>@p.Lanzamiento</td>
                                        <td>@p.Publico</td>
                                    </tr>
                                }
                            </tbody>
                    </table>
                }
            </div>
        </main>

        <!-- ASIDE -->
        <aside class="col-lg-3 peliculas-aside">

            <div class="card p-3 mb-3">
                <h5 class="card-title mb-3">Acciones</h5>

                <h6 class="mb-2">Actualizar serie</h6>
                <form asp-action="Edit" method="get" class="row g-2 mb-3">
                    <div class="col-8">
                        <input name="IdSerie"
                               type="text"
                               class="form-control"
                               placeholder="Código identificador" />
                    </div>
                    <div class="col-4 d-grid">
                        <button type="submit" class="btn btn-edit">
                            <i class="bi bi-pencil me-2"></i>Actualizar
                        </button>
                    </div>
                </form>

                <h6 class="mb-2">Eliminar serie</h6>
                <form asp-action="Delete" method="post" class="row g-2">
                    <div class="col-8">
                        <input name="IdSerie"
                               type="text"
                               class="form-control"
                               placeholder="Código identificador" />
                    </div>
                    <div class="col-4 d-grid">
                        <button type="submit" class="btn btn-edit btn-delete">
                            <i class="bi bi-trash-fill me-2"></i>Eliminar
                        </button>
                    </div>
                </form>
            </div>


            <!-- Filtros -->
            <div class="card p-3 mb-3">
                <h6 class="card-title mb-2">Filtros</h6>

                <form asp-action="FiltroGenero" method="post" class="mb-2">
                    <select name="genero" class="form-select form-select-sm mb-2">
                        <option value="">Género...</option>
                        <option>Acción</option>
                        <option>Terror</option>
                        <option>Romance</option>
                        <option>Suspenso</option>
                        <option>Comedia</option>
                        <option>Fantasía</option>
                        <option>Animación</option>
                        <option>Drama</option>
                    </select>
                    <button type="submit" class="btn btn-secondary btn-sm w-100">
                        Aplicar
                    </button>
                </form>

                <form asp-action="FiltroClasificacion" method="post">
                    <select name="publico" class="form-select form-select-sm mb-2">
                        <option value="">Público...</option>
                        <option>TV-Y</option>
                        <option>TV-Y7</option>
                        <option>TV-G</option>
                        <option>TV-PG</option>
                        <option>TV-14</option>
                        <option>TV-MA</option>
                    </select>
                    <button type="submit" class="btn btn-secondary btn-sm w-100">
                        Aplicar
                    </button>
                </form>
            </div>

            <!-- Orden -->
            <div class="card p-3">
                <h6 class="card-title mb-2">Orden</h6>
                <div class="d-grid gap-2">
                    <a class="btn btn-secondary btn-sm" asp-action="OrderTitulo">
                        <i class="bi bi-sort-alpha-down me-1"></i>Alfabético
                    </a>
                    <a class="btn btn-secondary btn-sm" asp-action="OrderFecha">
                        <i class="bi bi-calendar-event me-1"></i>Recientes
                    </a>
                    <a class="btn btn-secondary btn-sm" asp-action="OrderRating">
                        <i class="bi bi-star-fill me-1"></i>Rating
                    </a>
                </div>
            </div>

        </aside>

    </div>
</div>


